<Window x:Class="GreenShade.Wpf.WcfService.QrcodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenShade.Wpf.WcfService"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="QrcodeWindow" Height="400" Width="400">
    <Grid>
        <StackPanel         
            Orientation="Vertical">
            <Border BorderThickness="2"
                    Margin="10"
                    BorderBrush="Black"
                    Width="220"
                    Height="220">
                <Image x:Name="QrCodeImg" Width="200" Height="200" 
                   Margin="10"
               VerticalAlignment="Bottom"/>
                </Border>
                    <TextBox x:Name="IpUrl" FontSize="24"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                              IsReadOnly="True"
                       />
        </StackPanel>
    </Grid>
</Window>
